pipeline {
    agent{label 'JAVA_17'}
    stages {
        stage('VCS') {
            steps {
                git url: 'https://github.com/spring-projects/spring-petclinic.git',
                branch: 'main'
            }
        }
        stage('BUILD') {
            steps {
                cd spring-petclinic
                sh 'gradle init'
                sh 'gradle build'
            }
        }
    }
}