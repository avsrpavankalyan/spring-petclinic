pipeline {
    agent { label ('JAVA_17') }
    stages {
        stage(VCS) {
            steps {
                git url: 'https://github.com/avsrpavankalyan/spring-petclinic.git',
                    branch: 'build'
            }
        }
        stage(BUILD) {
            steps {
                sh './mvnw package'
            }
        }
        stage(snoarcloud) {
            steps {
                sh './mvnw clean verify sonar:sonar \
                -Dsonar.login=37b604e0b3459972b95cf83deb3cb0ef04d5f3de \
                -Dsonar.host.url=https://sonarcloud.io \
                -Dsonar.organization=Sonar_Cloud_Org \
                -Dsonar.projectKey=onar_Cloud_Org_Project'
            }
        }
    }
}