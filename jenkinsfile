pipeline {
    agent{label 'JAVA_17'}
    triggers { pollSCM ('* * * * *') }
    stages {
        stage('VCS') {
            steps {
                git url: 'https://github.com/spring-projects/spring-petclinic.git',
                branch: 'main'
            }
        }
        stage('BUILD') {
            steps {  
                sh './mvnw package'
            }
        }
        stage('post BUILD') {
            steps {
                archiveArtifacts artifacts: '**/target/spring-petclinic-3.0.0-SNAPSHOT.jar',
                                 onlyIfSuccessful: true
                junit testResults: '**/surefire-reports/TEST-*.xml'
            }
        }
    }
}
