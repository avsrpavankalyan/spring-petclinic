pipeline {
    agent { label ('JAVA_17') }
    stages {
        stage(VCS) {
            steps {
                git url: 'https://github.com/avsrpavankalyan/spring-petclinic.git',
                    branch: 'build'
            }
        }
        stage(BUILD) {
            steps {
                sh './mvnw package'
            }
        }
        stage(snoarcloud) {
            steps {
                sh './mvnw clean verify sonar:sonar \
                -Dsonar.login=77b046129b28048f70eb1789454bc56bee266e57 \
                -Dsonar.host.url=https://sonarcloud.io/
                -Dsonar.organization=avsrpavankalyan
                -Dsonar.projectKey=jenkinsdeploy'
            }
        }
    }
}