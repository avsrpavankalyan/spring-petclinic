pipeline {
    agent { label ('JAVA_17') }
    stages {
        stage(VCS) {
            steps {
                git url: 'https://github.com/avsrpavankalyan/spring-petclinic.git',
                    branch: 'build'
            }
        }
        stage(BUILD) {
            steps {
                sh './mvnw package'
            }
        }
        stage(snoarcloud) {
            steps {
                sh './mvnw clean verify sonar:sonar \
                -Dsonar.login=3ac90155f6785fe70a64786e7618ee2d77fbae5a \
                -Dsonar.host.url=https://sonarcloud.io \
                -Dsonar.organization=kalyanKR \
                -Dsonar.projectKey=sonar-kalyanKR_project'
            }
        }
        stage(jfrog) {
            steps {
                rtServer (
                    id: "ARTIFACTORY_SERVER",
                    url: 'https://jfrogjenkinstask.jfrog.io//artifactory',
                    credentialsId: 'JFROG_ID'
                )
                 rtMavenDeployer (
                    id: "JFROG_ID",
                    serverId: "ARTIFACTORY_SERVER",
                    releaseRepo: 'libs-release',
                    snapshotRepo: 'libs-snapshot'
                )
                 rtMavenResolver (
                    id: "JFROG_ID",
                    serverId: "ARTIFACTORY_SERVER",
                    releaseRepo: 'libs-release',
                    snapshotRepo: 'libs-snapshot'
                )
            }
        }
        stage(package) {
            tools {
                     jdk 'JDK_17_VERSION'
            }         
            steps {
                rtMavenRun (
                    tool: 'MAVEN_VERSION',
                    pom: 'pom.xml',
                    goals: 'clean install',
                    deployerId: "MAVEN_DEPLOYER",
                    resolverId: "MAVEN_RESOLVER"
                )
            }
        }
    }
}