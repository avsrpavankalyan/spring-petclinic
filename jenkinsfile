pipeline {
    agent { label ('JAVA_17') }
    stages {
        stage(VCS) {
            steps {
                git url: 'https://github.com/avsrpavankalyan/spring-petclinic.git',
                    branch: 'build'
            }
        }
        stage(BUILD) {
            steps {
                sh './mvnw package'
            }
        }
        stage(snoarcloud) {
            steps {
                sh './mvnw clean verify sonar:sonar \
                -Dsonar.login=b6ffadb1e33b4c6eb12008c31f06d1589a1be5ab \
                -Dsonar.host.url=https://sonarcloud.io \
                -Dsonar.organization=kalyankr \
                -Dsonar.projectKey=kalyankr_project'
            }
        }
    }
}