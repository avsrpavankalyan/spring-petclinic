pipeline {
    agent{label 'JAVA_17'}
    stages {
        stage('VCS') {
            steps {
                git url: 'https://github.com/spring-projects/spring-petclinic.git',
                branch: 'main'
            }
        }
        stage('BUILD') {
            steps {
                sh 'export PATH=$PATH:/opt/gradle/gradle-8.0.2/bin  && gradle build'
            }
        }
    }
}